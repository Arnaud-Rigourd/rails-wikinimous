<h1>Edit article</h1>

<%= form_with model: @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>

<p><%= link_to 'Delete article', article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>

<p><%= link_to 'Back to list', articles_path %></p>
